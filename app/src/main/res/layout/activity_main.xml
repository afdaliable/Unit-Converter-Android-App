<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_tittle"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_input_output"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintHeight_percent=".32"
        app:layout_constraintTop_toBottomOf="@id/tv_tittle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cl_number_group">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_celcius"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginVertical="1dp"
            android:text="@string/text_celcius"
            android:layout_marginEnd="1dp"
            android:textSize="24sp"
            android:background="@drawable/custom_bg_color"
            android:clickable="false"
            app:layout_constraintHeight_percent=".32"
            />

        <LinearLayout
            android:id="@+id/ll_input"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="1dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/btn_celcius"
            app:layout_constraintBottom_toBottomOf="@id/btn_celcius"
            app:layout_constraintStart_toEndOf="@id/btn_celcius"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/custom_bg_color"

            >
            <TextView
                android:id="@+id/tv_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="0"
                android:gravity="center|end"
                android:layout_marginEnd="16dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_fahrenheit"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/btn_celcius"
            android:layout_marginVertical="1dp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/text_fahrenheit"
            android:layout_marginEnd="1dp"
            android:textSize="24sp"
            android:background="@drawable/custom_bg_color"
            android:clickable="false"
            app:layout_constraintHeight_percent=".32"
            />

        <LinearLayout
            android:id="@+id/ll_output"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="1dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/btn_fahrenheit"
            app:layout_constraintBottom_toBottomOf="@id/btn_fahrenheit"
            app:layout_constraintStart_toEndOf="@id/btn_fahrenheit"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/custom_bg_color"

            >
            <TextView
                android:id="@+id/tv_output"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="0"
                android:gravity="center|end"
                android:layout_marginEnd="16dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_swap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_output"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/swap_text"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_number_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintTop_toBottomOf="@id/cl_input_output"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="16dp"

        >
        <LinearLayout
            android:id="@+id/number_first_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/number_second_row"
            android:orientation="horizontal"
            >
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_1"
            android:text="1"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/custom_bg_color"
            android:layout_margin="1dp"
            />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_2"
                android:text="2"
                android:layout_width="0dp"
                android:layout_weight="25"                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/custom_bg_color"
                android:layout_margin="1dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_3"
                android:text="3"
                android:layout_width="0dp"
                android:layout_weight="25"                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/custom_bg_color"
                android:layout_margin="1dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_clear"
                android:text="C"
                android:layout_width="0dp"
                android:layout_weight="25"                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/custom_bg_color"
                android:layout_margin="1dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/number_second_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number_first_row"
            app:layout_constraintBottom_toTopOf="@id/number_third_row"
            android:orientation="horizontal"
            android:weightSum="100"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_4"
                android:text="4"
                android:layout_width="0dp"
                android:layout_weight="25"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/custom_bg_color"
                android:layout_margin="1dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_5"
                android:text="5"
                android:layout_width="0dp"
                android:layout_weight="25"                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/custom_bg_color"
                android:layout_margin="1dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_6"
                android:text="6"
                android:layout_width="0dp"
                android:layout_weight="25"                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/custom_bg_color"
                android:layout_margin="1dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_plus"
                android:text="+"
                android:layout_width="0dp"
                android:layout_weight="25"                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/custom_bg_color"
                android:layout_margin="1dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/number_third_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number_second_row"
            app:layout_constraintBottom_toTopOf="@id/number_fourth_row"
            android:orientation="horizontal"
            android:weightSum="100"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_7"
                android:text="7"
                android:layout_width="0dp"
                android:layout_weight="25"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/custom_bg_color"
                android:layout_margin="1dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_8"
                android:text="8"
                android:layout_width="0dp"
                android:layout_weight="25"                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/custom_bg_color"
                android:layout_margin="1dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_9"
                android:text="9"
                android:layout_width="0dp"
                android:layout_weight="25"                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/custom_bg_color"
                android:layout_margin="1dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_minus"
                android:text="-"
                android:layout_width="0dp"
                android:layout_weight="25"                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/custom_bg_color"
                android:layout_margin="1dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/number_fourth_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number_third_row"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:weightSum="100"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_0"
                android:text="0"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/custom_bg_color"
                android:layout_margin="1dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dot"
                android:text="."
                android:layout_width="0dp"
                android:layout_weight="25"                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/custom_bg_color"
                android:layout_margin="1dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_count"
                android:text="OK"
                android:layout_width="0dp"
                android:layout_weight="25"                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/custom_bg_color"
                android:layout_margin="1dp"
                />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



